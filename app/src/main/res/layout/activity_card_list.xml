<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CardList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_icon"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/payments_header"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_pay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/payment_mode1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/image_pay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/payment_mode2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/image_pay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/payment_mode3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>