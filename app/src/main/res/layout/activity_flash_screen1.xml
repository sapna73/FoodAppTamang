<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FlashScreen1">

    <ImageView
        android:id="@+id/image_tamang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tamang_food_service"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/image_ice_cream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icecream_"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/image_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/desp_first_screen"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_get1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:backgroundTint="#EEA734"
        android:background="@drawable/button_background"/>

</LinearLayout>