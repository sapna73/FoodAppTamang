<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FlashScreen2">

    <ImageView
        android:id="@+id/image_second_tamang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tamang_food_service"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/image_second_all_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_all_fav"
        android:layout_marginTop="360dp"/>

    <ImageView
        android:id="@+id/image_second_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_second_desp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_get2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:backgroundTint="#EEA734"
        android:background="@drawable/button_background"/>

</LinearLayout>