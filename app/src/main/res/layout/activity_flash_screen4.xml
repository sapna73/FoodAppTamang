<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FlashScreen3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_foods"
            android:layout_weight="1"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_tamang_food_service"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flash4_pic"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/image_second_all_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_choose_food"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/image_second_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fourth_desp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_get4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#EEA734"
        android:background="@drawable/button_background"/>

</LinearLayout>